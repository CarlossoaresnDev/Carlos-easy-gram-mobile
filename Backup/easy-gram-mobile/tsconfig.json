{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*",
    "components/**/*",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
